<ConstraintLayout
        width="100%"
        height="180px"
        backgroundColor="purple"
        border="4px solid red"
>

    <ImageView
            id="person_img"
            width="height"
            height="80px"
            src="phone.png"
            start_start="parent"
            top_top="parent"
            marginTop="8px"
            marginStart="8px"
    />
    <Label
            id="person_name"
            width="wrap_content"
            height="wrap_content"
            start_end='person_img'
            cy_align="person_img"
            marginTop="16px"
            marginStart="8px"
            textColor="white"
            value="la-la-la"
            textSize="1.2em"
            textStyle="bold italic"
            fontFamily="Arial"
            cssClass="list_cell_class"
    />
    <Label
            id="person_phone"
            width="wrap_content"
            height="wrap_content"
            start_start='person_img'
            top_bottom="person_img"
            marginTop="16px"
            textColor="white"
            value="..."
            textSize="1.2em"
            textStyle="bold italic"
            fontFamily="Arial"
            cssClass="list_cell_class"
    />

</ConstraintLayout>