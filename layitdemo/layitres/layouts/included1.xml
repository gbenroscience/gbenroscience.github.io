<ConstraintLayout
    width="75%"
    height="match_parent"
    maxWidth="90%"
    border="1px dashed brown"
    cx_align="parent"
>
    
    <Label
        id="block_title_1"
        width="wrap_content"
        height="wrap_content"
        cx_align='parent'
        top_top="parent"
        marginTop="16"
        textColor="black"
        value="Enter details"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    
        
    
    <TextField
        id="phone_input_1"
        width="90%"
        height="32px"
        cx_align="parent"
        top_bottom="block_title_1"
        margin="8"
        placeholder="Phone"
        background="white"
        fontFamily="Avenir"
        padding="8px"
        inputType="phone"
        text=""
        value=""
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
    />
    
    <TextField
        id="passcode_input_1"
        width="phone_input_1"
        height="32px"
        start_start="phone_input_1"
        end_end="phone_input_1"
        top_bottom="phone_input_1"
        marginTop='8px'
        placeholder="Password"
        inputType="password"
        background="white"
        fontFamily="Avenir"
        padding="8px"
        text=""
        value=""
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
    />
        
    <Button
        id="submit"
        width="phone_input_1*0.5"
        height="24px"
        start_start="phone_input_1"
        end_end="phone_input_1"
        top_bottom="passcode_input_1"
        marginTop='14px'
        background="btn_dark_green"
        fontFamily="Avenir"
        padding="0px"
        text="Submit"
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
    />
    
    
    
    
    
</ConstraintLayout>