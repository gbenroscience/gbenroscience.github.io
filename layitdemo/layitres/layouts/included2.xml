<ConstraintLayout
    width="90%"
    height="match_parent"
    cx_align="parent"
    border="1px dashed brown"
>
    
    <Label
        id="block_title_2"
        width="wrap_content"
        height="wrap_content"
        cx_align='parent'
        top_top="parent"
        marginTop="16"
        textColor="black"
        value="More details"
        textSize="1.2em"
        textStyle="bold"
        fontFamily="Arial"
    />
    
        
    
    <TextField
        id="phone_input_2"
        width="150px"
        height="32px"
        start_start="parent"
        end_end="parent"
        top_bottom="block_title_2"
        margin="8"
        placeholder="Land Line"
        background="white"
        fontFamily="Arial"
        padding="8px"
        inputType="phone"
        text=""
        value=""
        textColor="black"
        textSize="1.2em"
        textStyle="bold"
        borderRadius="10px"
    />

    
    
</ConstraintLayout>